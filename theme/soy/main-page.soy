{template banner}
<div id="stock_banner" {if $url}rel="{$url}"{/if}>
	<div class="link"></div>
	<div class="flash">
		<object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" width="474" height="162">
			<param name="movie" value="{$src}" />
			<param name="quality" value="high" />
			<param name="bgcolor" value="#ffffff" />
			<param name="wmode" value="opaque" />
			<param name="swfversion" value="6.0.65.0" />
			<!-- This param tag prompts users with Flash Player 6.0 r65 and higher to download the latest version of Flash Player. Delete it if you don’t want users to see the prompt. -->
			<param name="expressinstall" value="http://la2dead.ru/templates/la2dead/Scripts/expressInstall.swf" />
			<!-- Next object tag is for non-IE browsers. So hide it from IE using IECC. -->
			<!--[if !IE]>-->
			<object type="application/x-shockwave-flash" data="{$src}" width="474" height="162">
				<!--<![endif]-->
				<param name="quality" value="high" />
				<param name="wmode" value="opaque" />
				<param name="swfversion" value="6.0.65.0" />
				<param name="expressinstall" value="http://la2dead.ru/templates/la2dead/Scripts/expressInstall.swf" />
				<!-- The browser displays the following alternative content for users with Flash Player 6.0 and older. -->
				<div>
					<h4>У вас не установлен Adobe Flash Player, перейдите по ссылке ниже чтобы его установить.</h4>
					<p><a href="http://www.adobe.com/go/getflashplayer"><img src="/img/flash_download.jpg" alt="Get Adobe Flash player" /></a></p>
				</div>
				<!--[if !IE]>-->
			</object>
			<!--<![endif]-->
		</object>
	</div>
</div>

{/template}

