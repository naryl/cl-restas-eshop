{namespace soy.main-page}

/**
 * блок Товар дня daily
 */
{template daily}
<!-- товар дня  -->{\n}
<div class="block block-daily-item">
  <p class="h2">Товар дня <span>= специальная цена + <a href="/articles/dostavka_besplatno">доставим бесплатно!</a> </span></p>
  <div class="switch">
	<ul class="slider-pager">
       {foreach $item in $items}
             {if isFirst($item)}
                 <li class="active">
                   <a href="/{$item.articul}" rel="nofollow">{index($item) + 1}</a>
                 </li>{\n}
             {else}
                  <li> <a href="/{$item.articul}" rel="nofollow">{index($item) + 1}</a></li>
             {/if}
       {/foreach}
	</ul>
    <ul class="slider">
      {foreach $item in $items}
         <li class="click-full" rel="/{$item.articul}">
         	<div class="head">
         		<h2 class="title">
                    <a href="/{$item.articul}">{$item.name}</a>
                    <a href="/{$item.grouplink}" class="group">( {$item.groupname} )</a>
                </h2>
         	</div>
         	<div class="midd">
         		<div class="image">
         			<a href="/{$item.articul}">
	         			{if $item.pic}
	         				<img class="img" src="/pic/middle/{$item.articul}/{$item.pic}" alt="{$item.name}"/>
	         			{else}
	         				<img src="/img/temp/empty-foto.jpg" width="225" alt="Фото"/>
	         			{/if}
         			</a>
         		</div>
         		<div class="info">
         			<div class="specs">
						<ul>
							{foreach $option in $item.options}

									{if index($option)%2 == 0}
									<li {if index($option) < 6} class="dotted"{/if}><span>{$option}</span>
									{else}
									<b>{$option}</b></li>
									{/if}

							{/foreach}
						</ul>
         			</div>
         			<div class="foot">
         				<div class="price">
         					<span class="new"><b>{$item.showsiteprice}</b> руб.</span>
         				</div>
         				<div class="buy" rel="link">
							{$item.buttonaddcart | noAutoescape}
						</div>
						<div class="clr"></div>
         			</div>
         		</div>
         	</div>
         </li>
       {/foreach}
    </ul>
  </div>
</div>
{/template}


/**
 * блок Лучшие цены best
 */
{template best}
<div id="best_items" class="full">
	<div class="main_title">
		<h2><span class="black">Лучшие цены</span> — на сайте дешевле, чем в магазинах</h2>
	</div>
	<div class="carousel_big carousel_outer">
		<button class="carousel_left"></button>
		<button class="carousel_right"></button>
		<div class="carousel_wrap">
			<ul>
				{foreach $item in $items}
				<li rel="/{$item.articul}" class="product">
					<div class="bg">
						<div class="head">
							<div class="group" rel="link">
								<a href="/{$item.grouplink}">{$item.groupname}</a>
							</div>
							<div class="area">
								<div class="badge red">
									<span>Лучшая цена</span>
								</div>
								<p class="rating rating5"><i></i></p>
								<div class="clr"></div>
							</div>
						</div>
						<div class="midd">
							<div class="image">
								<a href="/{$item.articul}">
									{if $item.pic}
				         				<img src="/pic/middle/{$item.articul}/{$item.pic}" alt="{$item.name}"/>
				         			{else}
				         				<img src="/img/temp/empty-foto.jpg" width="225" alt="Фото"/>
				         			{/if}
			         			</a>
							</div>
							<div class="title" class="link">
								<h2>
									<a href="/{$item.articul}">{$item.name}</a>
								</h2>
							</div>
						</div>
						<div class="foot">
							<div class="price">
								<span class="new"><b>{$item.showsiteprice}</b> руб.</span>
								<span class="old">{$item.showprice} руб.</span>
							</div>
							<div class="buy" rel="link">
								{$item.buttonaddcart | noAutoescape}
							</div>
							<div class="clr"></div>
						</div>
					</div>
				</li>
				{/foreach}
			</ul>
		</div><!-- carousel wrap -->
	</div><!-- carousel -->
</div>

{/template}


